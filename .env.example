# Service URLs
SONARR_URL=http://localhost:8989
SONARR_API_KEY=your_sonarr_api_key_here
JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=your_jellyfin_api_key_here
SEERR_URL=http://localhost:5055
SEERR_API_KEY=your_seerr_api_key_here
SEERR_USER_ID=
SABNZBD_URL=http://localhost:8080
SABNZBD_API_KEY=your_sabnzbd_api_key_here
JELLYFIN_USER_IDS=user_id_1,user_id_2,user_id_3

# Settings
WATCH_THRESHOLD=0.75
RUN_INTERVAL_MINUTES=15
NEW_SERIES_LOOKBACK_HOURS=48
DRY_RUN=false
LOG_LEVEL=INFO
RUN_CATCHUP_ON_START=false
WEBHOOK_PORT=9191
SABNZBD_QUEUE_WAIT_SECONDS=120
PLAYBACK_CHECK_INTERVAL=45
PLAYBACK_SCRIPT_TIMEOUT=600

# Trakt Content Discovery
# Create an app at https://trakt.tv/oauth/applications to get client ID/secret
TRAKT_CLIENT_ID=
TRAKT_CLIENT_SECRET=
TRAKT_DISCOVERY_ENABLED=false
# HH:MM local time - time of day to run daily discovery
TRAKT_DISCOVERY_TIME=00:00
# IANA timezone (e.g. America/Chicago, America/New_York, America/Los_Angeles)
TRAKT_DISCOVERY_TZ=UTC
TRAKT_DISCOVER_SHOWS=true
TRAKT_DISCOVER_MOVIES=true
TRAKT_LISTS=recommended,watchlist,trending,popular,anticipated
TRAKT_MIN_RATING=7.0
TRAKT_MIN_VOTES=100
TRAKT_YEARS=
TRAKT_GENRES=
TRAKT_LANGUAGES=en
TRAKT_MAX_REQUESTS_PER_CYCLE=10
TRAKT_MAX_SHOW_REQUESTS=5
TRAKT_MAX_MOVIE_REQUESTS=5
TRAKT_ITEMS_PER_LIST=20

# Genre exclusion — skip items matching these genres (comma-separated, lowercase)
# Common values: animation,reality,talk-show,game-show,news,soap
TRAKT_EXCLUDE_GENRES=

# Content rating filters — uses Trakt certification field directly, NO TMDB key required
# Certification reflects the content's origin country rating (typically US for US content)
# TV values: TV-Y, TV-Y7, TV-G, TV-PG, TV-14, TV-MA
# Movie values: G, PG, PG-13, R, NC-17
# allow-list: only these ratings pass (empty = all allowed)
FILTER_CONTENT_RATINGS=
# deny-list: skip items with these ratings (empty = none blocked)
FILTER_EXCLUDE_CONTENT_RATINGS=

# TMDB filters (optional — requires a free TMDB API key from https://www.themoviedb.org/settings/api)
# These filters use TMDB data for episode count, show status, show type, networks, and season count
# ⚠ BREAKING CHANGE (v8): TRAKT_MAX_EPISODES     → TMDB_MAX_EPISODES
#                          TRAKT_ALLOWED_SHOW_STATUS → TMDB_ALLOWED_SHOW_STATUS
TMDB_API_KEY=
# Skip shows with more than this many episodes (0 = disabled)
TMDB_MAX_EPISODES=0
# Only allow shows with these statuses (comma-separated, empty = all)
# Values: Returning Series, Planned, In Production, Ended, Canceled, Pilot
TMDB_ALLOWED_SHOW_STATUS=
# Skip shows of these types (comma-separated, empty = all types allowed)
# TMDB type values: Scripted, Miniseries, Documentary, Reality, News, Talk Show
TMDB_EXCLUDE_SHOW_TYPES=
# Only allow shows from these networks (comma-separated, empty = all networks)
# Examples: HBO, Netflix, AMC, FX, Apple TV+, Hulu, Disney+, Showtime
TMDB_ALLOWED_NETWORKS=
# Skip shows with more than this many seasons (0 = disabled; complements TMDB_MAX_EPISODES)
TMDB_MAX_SEASONS=0
# Original language filter — checks TMDB's original_language field (ISO 639-1 codes)
# More accurate than TRAKT_LANGUAGES which reflects metadata language, not production language
# Applies to both shows and movies. Common codes: en, ko, fr, de, ja, es, pt, zh
# Leave empty to allow all languages (default behaviour)
TMDB_ORIGINAL_LANGUAGE=

# Seerr recheck window — days before a skipped_exists record expires so auto-deleted content
# can be re-discovered and re-requested. 0 = permanent (never re-check).
# Useful with auto-deletion tools (e.g. Jellysweep) — content purged from your library
# will re-enter the discovery pipeline after this many days and may be re-requested.
TRAKT_SEERR_RECHECK_DAYS=365

# Premium Content Bypass
# High-rated content from configured lists can bypass year and/or show status filters
# TRAKT_MIN_RATING (7.0) still applies as the floor — bypass only overrides year/status
TRAKT_PREMIUM_BYPASS_ENABLED=true
TRAKT_PREMIUM_BYPASS_MIN_RATING=8.0
# comma-separated list names
TRAKT_PREMIUM_BYPASS_LISTS=recommended,watchlist
# year, status, or year,status
TRAKT_PREMIUM_BYPASS_FILTERS=year,status

# Alert webhook (optional) — fires ONLY on token refresh failure requiring manual re-auth
# Supports Discord (content field) and Slack (text field) webhook URLs
ALERT_WEBHOOK_URL=
